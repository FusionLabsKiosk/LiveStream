{
    "manifest_version": 2,
    "name": "Live Stream Kiosk",
    "version": "0.0.0.1",
    
    "description": "Live Stream airport kiosk terminal app.",
    "icons": { 
        "16": "images/icon_16.png", 
        "48": "images/icon_48.png", 
        "128": "images/icon_128.png" 
    },
    
    "kiosk_enabled": true,
    "author": "Fusion Labs",
    "app": {
        "background": {
            "scripts": ["scripts/window.js"]
        }
    },
    "offline_enabled": true,
    
    "sandbox": {
        "pages": [
            "widgets/maps/sandbox.html",
            "scripts/scripts_sandbox.html"
        ]
    },
    "permissions": [
        "<all_urls>"
    ]
}