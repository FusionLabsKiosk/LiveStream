{
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "manifest_version": 2,
    "name": "InfoHub",
    "version": "1.1.0",
    
    "description": "Airport live data streaming kiosk app for Chrome",
    "icons": { 
        "16": "images/icon_16.png", 
        "48": "images/icon_48.png", 
        "128": "images/icon_128.png" 
    },
    
    "author": "ChromeKioskApps@gmail.com",
    "kiosk_enabled": true,
    "minimum_chrome_version": "37",
    "offline_enabled": true,
    "permissions": [
        "accessibilityFeatures.read",
        "accessibilityFeatures.modify",
        "<all_urls>"
    ],    
    "sandbox": {
        "pages": [
            "widgets/maps/sandbox.html",
            "scripts/scripts_sandbox.html"
        ]
    }
}